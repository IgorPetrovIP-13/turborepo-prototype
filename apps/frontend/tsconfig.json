{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
